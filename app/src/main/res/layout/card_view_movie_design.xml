<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/satirCardViewFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                card_view:srcCompat="@drawable/django"
                android:id="@+id/imageViewMovPicture" />

            <TextView
                android:text="Film Titel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/imageViewMovPicture"
                android:id="@+id/textViewMovTitle" />

            <TextView
                android:text="Film Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_below="@+id/textViewMovTitle"
                android:id="@+id/textViewMovPrice" />

            <Button
                android:text="Add to Cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewMovPrice"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:id="@+id/buttonaddShoppingCart" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/nokta"
                android:id="@+id/imageViewPoPicture"
                android:layout_alignBottom="@+id/buttonaddShoppingCart"
                android:layout_toRightOf="@+id/buttonaddShoppingCart"
                android:layout_toEndOf="@+id/buttonaddShoppingCart" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>